@model Tuple<AppUser,AppUserDetail>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="img/favicon.png">
    <title>FlatLab - Flat & Responsive Bootstrap Admin Template</title>
    <!-- Bootstrap core CSS -->


    <link href="~/OuterTools/FlatAdmin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/OuterTools/FlatAdmin/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/OuterTools/FlatAdmin/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/OuterTools/FlatAdmin/css/style.css" rel="stylesheet">
    <link href="~/OuterTools/FlatAdmin/css/style-responsive.css" rel="stylesheet" />
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->

    <style>
        #Item2_Address{
            resize:none;
        }
    </style>
</head>
<body class="login-body">
    <div class="container">

        <h1 style="color:red"> @ViewBag.ZatenVar </h1>

        @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { @class = "form-signin" }))
        {
            <h1 style="color:green">@TempData["HesapAktif"]</h1>
            <h2 class="form-signin-heading">registration now</h2>
            <div class="login-wrap">
                <p>Lutfen hesap bilgilerinizi giriniz</p>





                @Html.TextBoxFor(x => x.Item1.UserName, new { @class = "form-control", placeholder = "Kullanıcı ismi giriniz" })






                @Html.TextBoxFor(x => x.Item1.Password, new { @class = "form-control", placeholder = "Sifre" })

                @Html.TextBoxFor(x => x.Item1.ConfirmPassword, new { @class = "form-control", placeholder = "Sifre Tekrar" })




                @Html.TextBoxFor(x => x.Item1.Email, new { @class = "form-control", placeholder = "Email Adresi" })

                <p> Profil bilgilerinizi giriniz(zorunlu degildir sonra da olusturabilirsiniz)</p>

                @Html.TextBoxFor(x => x.Item2.FirstName, new { @class = "form-control", placeholder = "İsminiz" })

                @Html.TextBoxFor(x => x.Item2.LastName, new { @class = "form-control", placeholder = "Soyismini" })


                @Html.TextAreaFor(x => x.Item2.Address, new { @class = "form-control", placeholder = "Adresiniz"}) <br />

                <button class="btn btn-lg btn-login btn-block">Submit</button>
                <div class="registration">
                    Already Registered.
                    @Html.ActionLink("Login","Login")
                   
                </div>
            </div>
        }

       
    </div>

</body>
</html>
